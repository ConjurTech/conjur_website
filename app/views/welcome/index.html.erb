<div id="contact-us-section">
  <div class="container text-center" id="contact">
    <h1>Get In Touch</h1>
    <%= form_tag '/contact', remote: true, id: 'contact_form' do %>
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <input name="name" type="text" class="form-control" id="name-input" placeholder="Name" required>
        </div>
        <div class="col-xs-12 col-md-6">
          <input name="email" type="email" class="form-control" id="email-input" placeholder="Email">
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <textarea name="message" class="form-control" id="message-input" rows="6" placeholder="Message" required></textarea>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <button type="submit" class="btn btn-lg btn-primary btn-send pull-right">SEND</button>
        </div>
      </div>
    <% end %>
  </div>
</div>