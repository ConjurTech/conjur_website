        <%= image_tag('icon_consult.png') %>
      </div>
      <div class="process-text">
        <h2>Consult Us</h2>
      </div>
    </div>
    <div class="process-step" data-sr="wait 0.5s, enter left, hustle 70px">
      <div class="process-image with-line">
        <%= image_tag('icon_develop.png') %>
      </div>
      <div class="process-text">
        <h2>We Develop</h2>
      </div>
    </div>
    <div class="process-step" data-sr="wait 1.0s, enter left, hustle 70px">
      <div class="process-image with-line">
        <%= image_tag('icon_results.png') %>
      </div>
      <div class="process-text">
        <h2>Get Results</h2>
      </div>
